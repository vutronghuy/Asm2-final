<div class="container" id="product-detail">
<div class="row">
    <div class="col-md-7" id="product-info">
        <p class="product-title">{{ lego.name }}</p>
        <p class="product-price">{{ lego.price }}</p>
        <p> Quantity: 1</p>
        <h4>Description : </h4>
        <p>{{lego.des}}</p>
    </div>
    <div class="image-container col-md-5">
        <img src="{{lego.image}}" width="400px" style="object-fit: cover;">
    </div>
</div>
</div>
<style>
    
  .product-title {
    word-wrap: break-word;
    font-size: 30px;
    font-weight: bold;
    height: 100px;
  }

  #product-detail {
    border: 2px solid black;
    padding: 100px;
    border-radius: 5px;
    background-color: powderblue;
  }

  #product-info h5 {
    display: inline-block;
    padding-top: 10px;
    margin-top: 20px;
    border-top: 1px solid rgb(170, 170, 170);
    font-weight: bold;
  }
  .image-container {
    display: flex;
    justify-content: center;
    border-left: 1px solid rgb(171, 171, 171);
  }

</style>