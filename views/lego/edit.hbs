      <label class="h5 text text-success">Category</label>
      <select class="form-control" name="name" id="">
        <option value="Lego">Lego</option>
        <option value="Nerf">Nerf</option>
      </select>
    </div> --}}
    <div class="form-group">
      <label class="h5 text text-success">Price</label>
      <input class="form-control" type="Number" name="price" value="{{ lego.price }}" required>
    </div>
    <div class="form-group text-center mt-3 mb-3">
      <input class="btn btn-primary" type="submit" value="Update">
    </div>
  </form>
</div>