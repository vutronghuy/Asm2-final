<div class="container col-md-8 mt-3 mb-3 card bg-light">
    <form action="/product/edit/{{ product._id }}" method="post">
    <h1 class="text text-danger">Edit New Lego</h1>
    <div class="form-group">
        <label class="h5 text text-success" for="">Full name</label>
        <input class="form-control" type="text", name="name" value= {{ product.name }} required>
    </div>
    <div class="form-group">
        <label class="h5 text text-success" for="">Age</label>
        <input class="form-control" type="number", name="age" value={{  product.age }} required>
    </div>
     
      <div class="form-group">
        <label class="h5 text text-success" for="">sku</label>
        <input class="form-control" type="number", name="sku" value= {{ product.sku }} required>
    </div>
      <div class="form-group">
        <label class="h5 text text-success" for="">image</label>
        <img src="{{ product.image }}" width="100", height="100">
        <input class="form-control" type="text", name="image" value={{ product.image }} required>
    </div>
      <div class="form-group">
        <label class="h5 text text-success" for="">Des</label>
        <input class="form-control" type="text", name="des" value={{ product.des }} required>
    </div>
       <div class="form-group">
        <label class="h5 text text-success" for="">Category</label>
        <select class="form-control" name="name" id="">
            <option value="Lego">Lego</option>
            <option value="Nerf">Nerf</option>
        </select>
    </div>
      <div class="form-group">
        <label class="h5 text text-success" for="">Price</label>
        <input class="form-control" type="Number", name="price" value={{ product.price }} required>
    </div>
      <div class="form-group text-center mt-3 mb-3">
        <input class="btn btn-primary" type="submit" value="Update">
    </div>
    </form>
</div>